#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

NegotiationRoot:

<NegotiationRoot>:
    carousel: car
    negotiation: neg
    scenarios: sce

    BoxLayout:
        size: root.size
        orientation: "vertical"
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: "Jupiter"
                    with_privious: False

                ActionButton:
                    text: "negotiation"
                    on_press: app.root.carousel.load_slide(app.root.negotiation)

                ActionButton:
                    text: "scenarios"
                    on_press: app.root.carousel.load_slide(app.root.scenarios)

        Carousel:
            id: car
            Negotiation:
                id: neg
            Scenarios:
                id: sce


<Negotiation>:
    list_item: list_item_info
    BoxLayout:
        size: root.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .55

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: .16

                Label:
                    text: "Multiparty Negotiation Session Setup"
                    canvas.before:
                        Color:
                            rgba: 0.3,0.3,0.5,1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                BoxLayout:
                    Label:
                        size_hint_x: .3
                        text: "Protocol"

                    Button:
                        size_hint_x: .7
                        text: "Stacked Alternative Offers Protocol"

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: .32

                Label:
                    text: "participants"
                    canvas.before:
                        Color:
                            rgba: 0.3,0.3,0.5,1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                BoxLayout:
                    Label:
                        size_hint_x: .3
                        text: "Party ID"

                    TextInput:
                        id: party
                        size_hint_x: .7
                        text_size: self.size
                        text: 'Party'

                BoxLayout:
                    Label:
                        size_hint_x: .3
                        text: "Party Strategy"

                    Spinner:
                        id: party_strategy
                        size_hint_x: .7
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        text: 'Party strategy'
                        values: [str(y) for y in range(1, 20)]

                BoxLayout:
                    Label:
                        size_hint_x: .3
                        text: "Preference Profile"

                    Spinner:
                        id: preference_profile
                        size_hint_x: .7
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        text: 'Priference Profile'
                        values: [str(y) for y in range(1, 10)]

            BoxLayout:
                size_hint_y: .08
                Button:
                    text: "Add Party"
                    on_press: root.buttonClicked()

                Button:
                    text: "Remove Party"
                    on_press: root.buttonClicked1()

            ListView:
                id: list_item_info
                adapter:
                    ListAdapter(data=[], cls=main.ListButton, args_converter=main.Negotiation.lists_args_converter)

            BoxLayout:
                size_hint_y: .16
                Label:
                    size_hint_x: .2
                    text: "Deadline"

                TextInput:
                    size_hint_x: .5

                TextInput:
                    size_hint_x: .3

            Button:
                size_hint_y: .15
                text: "start"
                on_press: root.start()

        BoxLayout:
            orientation: "vertical"
            size_hint_x: .45
            BoxLayout:
                size_hint_y: .6
                id: grade

                canvas.before:
                    Color:
                        rgba: 0,0.3,0.35,1
                    Rectangle:
                        pos: self.pos
                        size: self.size

            TextInput:
                size_hint_y: .4
                text: root.result_text

<ListButton>:
    text_size: self.size
    halign: 'left'
    text: self.list[0]+",  "+self.list[1]+",  "+self.list[2]

    height: "40dp"
    size_hint_y: None

<Scenarios>:
    domain_list: domain_list
    util_list: util_list
    issue_list: issue_list
    issue_item: item_list
    BoxLayout:
        size: root.size
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: .1
            Label:
                size_hint_x: .2
                text: "Domain name"

            TextInput:
                id: domain_name
                size_hint_x: .7
                text: ""

            Button:
                size_hint_x: .1
                text: "ok"
                on_press: root.buttonClicked()

        BoxLayout:
            ListView:
                size_hint_x: .15
                id: domain_list
                adapter:
                    ListAdapter(data=[], cls=main.DomainButton, args_converter=main.Scenarios.domain_args_converter)

            ListView:
                size_hint_x: .2
                id: util_list
                adapter:
                    ListAdapter(data=[], cls=main.UtilButton, args_converter=main.Scenarios.util_args_converter)

            BoxLayout:
                orientation: "vertical"
                size_hint_x: .6
                BoxLayout:
                    size_hint_y: .6
                    ListView:
                        id: issue_list
                        adapter:
                            ListAdapter(data=[], cls=main.IssueButton, args_converter=main.Scenarios.issue_args_converter)

                    ListView:
                        id: item_list
                        adapter:
                            ListAdapter(data=[], cls=main.ItemButton, args_converter=main.Scenarios.item_args_converter)

                BoxLayout:
                    size_hint_y: .3
                    orientation: "vertical"
                    BoxLayout:
                        Label:
                            size_hint_x: .7
                            text: root.label1

                        TextInput:
                            id: textbox1
                            size_hint_x: .3
                            text: root.label1_text

                    BoxLayout:
                        Label:
                            size_hint_x: .7
                            text: root.label2

                        TextInput:
                            id: textbox2
                            size_hint_x: .3
                            text: root.label2_text

                    BoxLayout:
                        Label:
                            size_hint_x: .7
                            text: root.label3

                        TextInput:
                            id: textbox3
                            size_hint_x: .3
                            text: root.label3_text

                BoxLayout:
                    size_hint_y: .1
                    Button:
                        size_hint_x: .3
                        text: root.text
                        on_press: root.add_clicked()

                    Button:
                        size_hint_x: .3
                        text: "save"
                        on_press: root.save_clicked()

<DomainButton>:
    text_size: self.size
    halign: 'left'
    text: self.list[0]

    height: "40dp"
    size_hint_y: None
    on_press: app.root.domain_clicked(self.list)

<UtilButton>:
    text_size:self.size
    halign: 'left'
    text: self.list[0]

    height: "40dp"
    size_hint_y: None
    on_press: app.root.util_clicked(self.list)

<IssueButton>:
    text_size: self.size
    halign: 'left'
    text: self.list[0]

    height: "40dp"
    size_hint_y: None
    on_press: app.root.issue_clicked(self.list)

<ItemButton>:
    text_size: self.size
    halign: 'left'
    text: self.list[0]

    height: "40dp"
    size_hint_y: None
    on_press: app.root.item_clicked(self.list)
